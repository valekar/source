    ViewBag.Title = "New Accounts";
}

<title>Orgler - New Account</title>

<link rel="stylesheet" href="~/StyleSheets/ui-grid.css" />
@section scripts { 
    <script src="@Url.Content("~/App/NewAccount/App.js")"></script>
    @Scripts.Render("~/App/newacount.js");
    @*<script src="@Url.Content("~/App/NewAccount/Controllers/SearchController.js")"></script>
    <script src="@Url.Content("~/App/NewAccount/Controllers/SearchResultsController.js")"></script>
    <script src="@Url.Content("~/App/NewAccount/Services/Service.js")"></script>
