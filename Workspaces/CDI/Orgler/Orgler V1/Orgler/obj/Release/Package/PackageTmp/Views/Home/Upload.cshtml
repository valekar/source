@{
    ViewBag.Title = "Upload";
}

<title>Orgler - Upload</title>

<link rel="stylesheet" href="~/StyleSheets/ui-grid.css" />
<link rel="stylesheet" href="~/StyleSheets/Custom.css" />
@section scripts {
    <script src="@Url.Content("~/App/Upload/App.js")"></script>
    <script src="@Url.Content("~/App/Upload/Services/UploadDataServices.js")"></script>
    <script src="@Url.Content("~/App/Upload/Services/UploadServices.js")"></script>
    <script src="@Url.Content("~/App/Upload/Directives/UploadDirectives.js")"></script>
    <script src="@Url.Content("~/App/Upload/Controllers/EOSIUploadController.js")"></script>
    <script src="@Url.Content("~/App/Upload/Controllers/AffiliationUploadController.js")"></script>
    <script src="@Url.Content("~/App/Upload/Controllers/EOUploadController.js")"></script>
}

@section jsCode {
    angular.bootstrap(document.getElementById("uploadModule"), ['uploadModule']);
}

<div class="container-fluid" data-ng-app="uploadModule" id="uploadModule">
    <br />
    <div class="row">
        <div class="container-fluid">
            <div ui-view="headerContent"></div>
            <div ui-view="pageContent"></div>
        </div>
    </div>

    <!--Modal Pop-up-->
    <div class="modal fade" id="uploadMessageDialogBox" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <img ng-src="{{uploadModalPopupImageLoc}}" alt="logo" style="float:left;padding:5px;margin-top:-10px;width:40px; height:40px;" />
                    <h4 class="modal-title">{{uploadModalPopupHeaderText}}</h4>
                </div>
                <div class="modal-body">
                    <p>{{uploadModalPopupBodyText}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>